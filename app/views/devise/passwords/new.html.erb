<div class="form-box">
  <div class="head">Forgot your password?</div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:id => 'login-form', method: :post}) do |f| %>
      <%= devise_error_messages! %>

      <div class="my-form-group">
        <label class="my-label-control">
          <span class="my-label-text">Email</span>
        </label>
        <%= f.email_field :email, autofocus: true, class: 'my-form-control' %>
      </div>

      <%= f.submit 'Send me reset password instructions', class: 'login-btn', :style => 'font-size: 12px'%>

      <%- if controller_name != 'sessions' %>
          <span>Have account?</span>
          <%= link_to 'Log in', new_session_path(resource_name) %><br />
      <% end -%>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <span>Not registered?</span>
          <%= link_to 'Sign up', new_registration_path(resource_name) %><br />
      <% end -%>
  <% end %>
</div>
