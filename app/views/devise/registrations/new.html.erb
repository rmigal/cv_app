
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 card">
        <div><h4>Sign up</h4></div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="col-md-12">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'ever-inputs' %>
            </div>

            <div class="col-md-12">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'ever-inputs' %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            </div>

            <div class="col-md-12">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation', class: 'ever-inputs' %>
            </div>

            <div class="col-md-12">
              <%= f.submit 'Sign up', class: 'btn btn-success links' %>
              <%= render "devise/shared/links" %>
            </div>


        <% end %>

      </div>
    </div>
  </div>


