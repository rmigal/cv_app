<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 card">
      <div><h4>Log in</h4></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="col-md-12">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'ever-inputs' %>
          </div>
          <div class="col-md-12">
            <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'ever-inputs' %>
          </div>
          <% if devise_mapping.rememberable? -%>
              <div class="col-md-12">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end %>
          <div class="col-md-12">
            <%= f.submit 'Log in', class: 'btn btn-success links' %>
            <%= render "devise/shared/links" %>
          </div>
      <% end %>
    </div>
  </div>
</div>


