<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <%= form_for [@resume, @skill] do |skill| %>
        <form>
          <fieldset class="form-group">
            <%= skill.label 'Section' %>
            <%= skill.text_field :section, class: 'form-control' %>
          </fieldset>
          <fieldset class="form-group">
            <%= skill.label 'Title' %>
            <%= skill.text_field :title, class: 'form-control' %>
          </fieldset>
          <fieldset class="form-group">
            <%= skill.label 'Percent' %>
            <%= skill.text_field :percent, class: 'form-control-file' %>
          </fieldset>
          <%= link_to 'Back', edit_resume_path(@resume), class: 'btn btn-default' %>
          <%= skill.submit 'Save', class: 'btn btn-success'%>
        </form>
    <% end %>
  </div>
</div>