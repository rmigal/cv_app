<div class="nested-fields ">
<div class="row">
  <div class="col-md-2">
    <label class=" text-center">Date from</label>
    <%= f.date_field :date_from, class: 'form-control input-xs', :data => {:provide => 'datepicker'} %>
    <label class="text-center">Date to</label>
    <%= f.text_field :date_to, class: 'form-control input-xs', :data => {:provide => 'datepicker'} %>
  </div>
  <div class="col-md-4">
    <label class="text-center">Project description</label>
    <%= f.text_area :description, class: 'form-control input-xs margin-inputs-more'  %>
  </div>
  <div class="col-md-4">
    <label class="text-center">Used technologies</label>
    <%= f.text_area :technologies, class: 'form-control input-xs margin-inputs-more'  %>
  </div>
</div>
  <div class="row">
    <div class="col-md-3">
      <label class="text-center">Client</label>
      <%= f.text_field :client, class: 'form-control input-xs'  %>
      <label class="text-center">Role in project</label>
      <%= f.text_field :role, class: 'form-control input-xs'  %>
    </div>
  </div>

  <%= link_to_remove_association 'remove', f, class: 'btn btn-danger btn-xs margin' %>

  </div>
