<div id="logo-section" class="logo-section">
  <img class="logo-section" src="/assets/images/everlabs_logo.png" alt="Ruby on Rails"/>
</div>

<div class="container">

  <div class="row">
    <%= link_to 'Create resume', new_resume_path, class: 'btn btn-info pull-right', :style => 'margin-right: 40px' %>
  </div>
  <div class="row", style="margin-top: 20px">

    <% @resumes.each do |resume| %>
        <div class="col-md-3">
          <%= link_to image_tag(resume.avatar.url(:small), class: 'circular'), resume_url(resume) %>
          <h4><%= resume.name %></h4>
        </div>
    <% end %>
  </div>
</div>
