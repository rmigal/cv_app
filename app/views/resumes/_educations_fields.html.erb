<div class="nested-fields form-horizontal">
  <div class="row">
    <div class="col-md-3">
      <label class=" text-center">Date from</label>
      <div class="input-group date">
        <%= f.text_field :date_from, class: 'form-control input-xs datetimepicker' %>
        <label class="text-center">Date to</label>
        <%= f.text_field :date_to, class: 'form-control input-xs datetimepicker' %>

      </div>

    </div>

    <div class="col-md-4">
      <label class="text-center">Level</label>
      <%= f.text_field :level, class: 'form-control input-xs'  %>

      <label class="text-center">Place</label>
      <%= f.text_field :place, class: 'form-control input-xs'  %>
    </div>

    <div class="col-md-4">
      <label class="text-center">Description</label>
      <%= f.text_area :description, class: 'form-control input-xs margin-inputs-more'  %>
    </div>

  </div>

  <%= link_to_remove_association 'remove', f, class: 'btn btn-danger btn-xs margin' %>

</div>

<script type="text/javascript">
  $(function () {
    $('.datetimepicker').datetimepicker({
      viewMode: 'years',
      format: 'MM/YYYY'
    });
  });
</script>

