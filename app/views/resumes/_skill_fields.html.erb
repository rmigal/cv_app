<div class="nested-fields form-horizontal">
  
    <div class="form-group col-md-6">
      <label class=" text-center">Section</label>
      <%= f.text_field :section, class: 'form-control input-xs '%>
    </div>
    <div class="form-group col-md-3 ">
      <label class="text-center">Title</label>
      <%= f.text_field :title, class: 'form-control input-xs margin-inputs' %>
    </div>
    <div class="form-group col-md-3">
      <label class="text-center">Percent</label>
      <%= f.text_field :percent, class: 'form-control input-xs margin-inputs-more'  %>
    </div>
  <div class="form-group col-md-2">
    <label class="text-center"></label>
    <%= link_to_remove_association 'remove', f, class: 'btn btn-danger btn-xs pull-right' %>
  </div>
</div>