<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <h1 class="worker-name"> <%= @resume.name %></h1>
      <p class="worker-info"><%= @resume.general_info %></p>
    </div>
    <div class="col-md-2">
      <%= image_tag @resume.avatar.url(:small), class: 'circular' %>
    </div>
    <div class="col-md-4 col-md-offset-1">
      <img src="/assets/everlabs_logo.png" style="width: 300px">
    </div>
  </div>
  <div class="custom-hr"></div>

  <div class="row">
    <div class="col-md-5 margin pull-right">
      <% @resume.skills.each do |skill| %>
          <h4><%= skill.section %></h4>
          <div class="skillbar clearfix " data-percent="<%= skill.percent %>%">
            <div class="skillbar-title" style="background: #d35400;"><span><%= skill.title %></span></div>
            <div class="skillbar-bar" style="background: #e67e22;"></div>
            <div class="skill-bar-percent"><%= skill.percent %>%</div>
          </div> <!-- End Skill Bar -->
      <% end %>
    </div>
  </div>

  <%= link_to 'Delete', resume_path,class: 'btn btn-danger pull-right margin', method: :delete, data: {confirm: "Are you sure?"} %>
  <%= link_to 'Edit', edit_resume_path, class: 'btn btn-warning pull-right margin' %>
  <%= link_to 'Back', resumes_path, class: 'btn btn-default pull-right margin' %>
</div>









